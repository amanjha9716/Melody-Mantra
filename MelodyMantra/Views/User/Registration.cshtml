@{
	ViewData["Title"] = "Registration Page";
}
<style>
	.login__field{
		width:40%;
	}
	.register_cont{
		display:flex;
		flex-wrap:wrap;
	}
	.login-container{
		padding:0px;
	}
</style>
<div class="login-container">
	<div class="screen">
		<div class="screen__content">
            <form class="login" action="/User/Register" method="post">

    <h1 class="login-h1">Sign Up Form</h1>
    <div class="register_cont">
        <div class="login__field">
            <input type="text" name="userName" class="login__input" placeholder="User Name" required>
        </div>
        <div class="login__field">
            <input type="text" name="name" class="login__input" placeholder="Name" required>
        </div>
       
        <div class="login__field">
            <input type="password" name="password" class="login__input" placeholder="Password" required>
        </div>
        <div class="login__field">
            <input type="number" name="phNo" class="login__input" placeholder="Phone Number" required>
        </div>
        <div class="login__field">
            <input type="number" name="age" class="login__input" placeholder="Age" required>
        </div>
        <div class="login__field">
            <input type="text" name="image" class="login__input" placeholder="Image URL">
        </div>
        <div class="login__field">
                        <p >Do you want to be admin?</p>
                        <select name="isAdmin" id="isAdmin" class="login__input" style="width:fit-content">
                            <option value="0">No</option>
                            <option value="1">Yes</option>
                        </select>
        </div>
    </div>

    <button type="submit" class="button login__submit">
        <span class="button__text">Register Now</span>
    </button>
</form>

		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>
	</div>
</div>