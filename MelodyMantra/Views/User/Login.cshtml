@{
    ViewData["Title"] = "Login Page";

}<div style="display:flex; justify-content:center;align-items:center">

	<div style="margin-right:30px" class="login-container">
		<div class="screen">
			<div class="screen__content">

				<form class="login" action="/user/login"method="post">
					<h1 class="login-h1">Login Form</h1>
					<div class="login__field">
						
						<input name="userName"type="text" class="login__input" placeholder="User name / Email">
					</div>
					<div class="login__field">

						<input type="password" name="password"class="login__input" placeholder="Password">
					</div>
					<a class="form-link" href="#">Forgot password??</a>

					<button class="button login__submit">
						<span class="button__text">Log In Now</span>
					</button>
				</form>
			</div>
			<div class="screen__background">
				<span class="screen__background__shape screen__background__shape4"></span>
				<span class="screen__background__shape screen__background__shape3"></span>
				<span class="screen__background__shape screen__background__shape2"></span>
				<span class="screen__background__shape screen__background__shape1"></span>
			</div>
		</div>
	</div>
	<div style="margin-right:30px" class="login-container">
		<div class="screen">
			<div class="screen__content">

				<form class="login" action="/user/AdminLogin" method="post">
					<h1 class="login-h1">Login Form(Admin)</h1>
					<div class="login__field">

						<input name="userName" type="text" class="login__input" placeholder="User name / Email">
					</div>
					<div class="login__field">

						<input type="password" name="password" class="login__input" placeholder="Password">
					</div>
					<a class="form-link" href="#">Forgot password??</a>

					<button class="button login__submit">
						<span class="button__text">Log In Now</span>
					</button>
				</form>
			</div>
			<div class="screen__background">
				<span class="screen__background__shape screen__background__shape4"></span>
				<span class="screen__background__shape screen__background__shape3"></span>
				<span class="screen__background__shape screen__background__shape2"></span>
				<span class="screen__background__shape screen__background__shape1"></span>
			</div>
		</div>
	</div>
</div>